<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/result_field"

       android:layout_width="match_parent"
       android:layout_height="90dp"
       android:hint="Result"
       android:textSize="30sp" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <Button
          android:id="@+id/clear"
          android:onClick="onNumberClick"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:text="C"
          android:textSize="30sp"/>


   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <Button
          android:id="@+id/seven"

          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:onClick="onNumberClick"
          android:text="7"
          android:textSize="30sp" />

      <Button
          android:id="@+id/eight"

          android:onClick="onNumberClick"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:text="8"
          android:textSize="30sp"/>

      <Button
          android:id="@+id/nine"

          android:onClick="onNumberClick"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:text="9"
          android:textSize="30sp" />

      <Button
          android:id="@+id/plus"

          android:onClick="onOperationClick"
          android:layout_width="wrap_content"
          android:layout_height="70dp"
          android:text="+"
          android:textSize="30sp" />


   </LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <Button
       android:id="@+id/four"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="4"
       android:textSize="30sp"/>
   <Button
       android:id="@+id/five"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="5"
       android:textSize="30sp"/>

   <Button
       android:id="@+id/six"
       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="6"
       android:textSize="30sp" />

   <Button
       android:id="@+id/minus"

       android:onClick="onOperationClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="-"
       android:textSize="30sp"/>


</LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <Button
       android:id="@+id/one"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="1"
       android:textSize="30sp"/>
   <Button
       android:id="@+id/two"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="2"
       android:textSize="30sp"/>
   <Button
       android:id="@+id/three"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="3"
       android:textSize="30sp"/>
   <Button
       android:id="@+id/multiply"

       android:onClick="onOperationClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="*"
       android:textSize="30sp"/>


</LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <Button
       android:id="@+id/dot"

       android:onClick="onOperationClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="."
       android:textSize="30sp"/>
   <Button
       android:id="@+id/zero"

       android:onClick="onNumberClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="0"
       android:textSize="30sp"/>
   <Button
       android:id="@+id/equal"

       android:onClick="onOperationClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="="
       android:textSize="30sp"/>
   <Button
       android:id="@+id/division"

       android:onClick="onOperationClick"
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:text="/"
       android:textSize="30sp"/>


</LinearLayout>





</LinearLayout>